extend layout
block content
  h2 Register
  p.lead Register a new account
  form(action="/account/register", method="post")
    fieldset
      br
      .control-group
          .control-group
              label.control-label(for="name.first") First Name 
              .controls
                  input(type="text", name="name.first", placeholder="First Name")
          .control-group
              label.control-label(for="name.last") Last Name
              .controls
                  input(type="text",  name="name.last", placeholder="Last Name")
      .control-group
          .control-group
              label.control-label(for="email") Email
              .controls
                  input(type="text", name="email", placeholder="Email Address")
      .control-group
          .control-group
              label.control-label(for="password") Password
              .controls
                  input(type="password", name="password", placeholder="Password")
    a.btn.btn-primary(onclick="$('form').submit();") Register