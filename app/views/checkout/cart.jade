extend layout
block content
  .row
    h2 #{title}
    hr
  .row
      table.table.table-hover
        thead
          th Name
          th Price
          th Quantity
          th Remove
        tbody
        if(cart)
          each product in cart.products
            tr
              td  
                a(href='/product/#{product.name}') #{product.name}
              td  $#{product.price}
              td= product.quantity
              td 
                i(remId='#{product.id}').icon-remove
        else
          p.lead Cart is Empty!
  .row

     .pull-right
        if(cart)
          h4 Total: $#{cart.total}
          if (!locals.logged)
            a(href="/account/login").btn.btn-primary Login to Checkout
          else
            a(href="/checkout/order").btn.btn-primary Continue As #{user.name.first}
